<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="ElogicCreditCardCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">ElogicCreditCardAuthCommand</item>
                <item name="capture" xsi:type="string">ElogicCreditCardCaptureCommand</item>
                <item name="refund" xsi:type="string">ElogicCreditCardRefundCommand</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- CreditCard Capture Command -->
    <virtualType name="ElogicCreditCardCaptureCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">ElogicCreditCardRequestCaptureBuilderComposite</argument>
            <argument name="transferFactory" xsi:type="object">Palamarchuk\ElogicCreditCard\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Palamarchuk\ElogicCreditCard\Gateway\Http\Client</argument>
            <argument name="handler" xsi:type="object">ElogicCreditCardCaptureHandler</argument>
            <argument name="validator" xsi:type="object">ElogicCreditCardResponseValidatorPool</argument>
        </arguments>
    </virtualType>

    <!-- CreditCard Request Capture Builder -->
    <virtualType name="ElogicCreditCardRequestCaptureBuilderComposite" type="Palamarchuk\ElogicCreditCard\Gateway\Request\RequestBuilder">
        <arguments>
            <argument name="builder" xsi:type="object">ElogicCreditCardCaptureBuilderComposite</argument>
        </arguments>
    </virtualType>

    <!-- CreditCard Request Capture Builder Composite -->
    <virtualType name="ElogicCreditCardCaptureBuilderComposite" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="general" xsi:type="string">Palamarchuk\ElogicCreditCard\Gateway\Request\Builder\GeneralBuilder</item>
                <item name="description" xsi:type="string">Palamarchuk\ElogicCreditCard\Gateway\Request\Builder\DescriptionBuilder</item>
                <item name="order" xsi:type="string">Palamarchuk\ElogicCreditCard\Gateway\Request\Builder\OrderBuilder</item>
                <item name="cardPayment" xsi:type="string">Palamarchuk\CreditCardCardGateway\Gateway\Request\Builder\CardPaymentBuilder</item>
                <item name="paymentAction" xsi:type="string">Palamarchuk\ElogicCreditCard\Gateway\Request\Builder\PaymentActionBuilder</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- CreditCard Payment Capture Handler-->
    <virtualType name="ElogicCreditCardCaptureHandler" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="payment" xsi:type="string">Palamarchuk\ElogicCreditCard\Gateway\Response\PaymentHandler</item>
                <item name="transaction" xsi:type="string">Palamarchuk\ElogicCreditCard\Gateway\Response\TransactionHandler</item>
            </argument>
        </arguments>
    </virtualType>





    <type name="Palamarchuk\ElogicCreditCard\Gateway\Config">
        <arguments>
            <argument name="gatewayUrl" xsi:type="const">Palamarchuk\ElogicCreditCard\Api\Sdk\ApiUrlInterface::API_URL</argument>
        </arguments>
    </type>

</config>
